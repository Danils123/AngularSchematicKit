{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "ng-add": {
      "description": "A blank schematic.",
      "factory": "./ng-add/index",
      "schema": "./ng-add/schema.json"
    },
    "scaffolding": {
      "description": "Add default linters",
      "factory": "./ng-generate/scaffolding/index#scaffolding",
      "schema": "./ng-generate/scaffolding/schema.json",
      "aliases": [
        "s"
      ]
    },
    "add-linters": {
      "description": "Add default linters",
      "factory": "./ng-generate/linters/index#addLinters",
      "schema": "./ng-generate/linters/schema.json",
      "aliases": [
        "l"
      ]
    },
    "add-git-hooks": {
      "description": "Add Git-hooks with Husky",
      "factory": "./ng-generate/gitHooks/index#addGitHooks",
      "schema": "./ng-generate/gitHooks/schema.json",
      "aliases": [
        "gh"
      ]
    },
    "newFeature": {
      "description": "Add a new scaffold feature",
      "factory": "./ng-generate/new-feature-structure/index",
      "schema": "./ng-generate/new-feature-structure/schema.json"
    }
  }
}