{
  "$schema": "http://json-schema.org/schema",
  "$id": "EmptyFolder",
  "title": "Add an empty folder",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the folder.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the empty folder?"
    }
  },
  "additionalProperties": false,
  "required": [
    "name"
  ]
}