{
  "name": "@danils/schematicskit",
  "version": "4.2.1",
  "description": "Angular-builder allows the developer to scan their projects and represent into a json.\nNext, they can execute from one to many angular schematics.",
  "private": false,
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs --treeshake",
    "testLocal": "npm run build && cd dist && npm link",
    "build:watch": "tsc -p tsconfig.json --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write .",
    "publish": "npm run build && cd dist && npm publish --access=public",
    "publish:verdaccio": "npm run build && cd dist && npm publish --registry http://localhost:4873"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "Angular 17+",
    "Schematics"
  ],
  "author": "Hyperxq",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hyperxq/AngularSchematicKit.git"
  },
  "license": "MIT",
  "schematics": "./collection.json",
  "dependencies": {
    "@angular-devkit/core": "^17.1.1",
    "@angular-devkit/schematics": "^17.1.1",
    "@angular-devkit/schematics-cli": "^17.1.1",
    "@schematics/angular": "^17.1.1",
    "ansi-colors": "^4.1.3",
    "inquirer": "8.2.6",
    "node-emoji": "^2.1.0",
    "ora": "5.4.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/inquirer": "^9.0.6",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^16.18.37",
    "@types/node-emoji": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cpr": "^3.0.1",
    "eslint": "^8.43.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jasmine": "^4.0.0",
    "lint-staged": "^13.3.0",
    "prettier": "2.8.8",
    "rollup": "3.29.4",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "ts-node": "^10.9.1"
  }
}
